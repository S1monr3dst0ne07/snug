

rout block::len ( 
    in  block; 
    out len;
){
    put len = block.(0-1) - 1;
}


rout block::sum (
    in block;
    out sum;
){
    put sum = 0;
    sub block::len( block ~ block, len ~ index );

    lab;
        put index = index - 1;
        put sum = sum + block.index;
    jump ~ index > 0;
}


rout block::range (
    in end;
    in start;
    in block;
){
    put len = end - start;
    put i = 0;

    lab;
        put block.i = start + i;
        put i = i + 1;
    jump ~ i < len;
}

rout block::debug (
    in block;
){
    sub block::len( block ~ block, len ~ len );

    put index = 0;
    lab;
        debug block.index;
        put index = index + 1;
    jump ~ index < len;
     
}

rout block::zero (
    in block;
){
    sub block::len( block ~ block, len ~ i );

    lab;
        put i = i - 1;
        put block.i = 0;
    jump ~ i > 0;
}

