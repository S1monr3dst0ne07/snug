

rout block::len ( 
    in  block; 
    out len;
){
    put len = block.(0-1) - 1;
}


rout block::sum (
    in block;
    out sum;
){
    put sum = 0;

    iter x ~ block
    {
        put sum = sum + x;
    }
}


rout block::range (
    in block;
    in offset;
    in len;
    in first;
){
    count i ~ 0 .. len
    {
        put block.(offset + i) = (first + i);
    }
}


rout block::iota (
    in block;
){
    enum x @ i ~ block
    {
        put block.i = i;
    }
}



rout block::debug (
    in block;
){
    iter x ~ block
    {
        debug x;
    }
}

rout block::zero (
    in block;
){
    enum _ @ i ~ block
    {
        put block.i = 0;
    }
}

